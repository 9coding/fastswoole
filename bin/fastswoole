#!/usr/bin/env php
<?php
use FastSwoole\Core;

$executeFile = $argv[0];
$command = strtolower(trim(($argv[1]) ?? ''));
$runmode = strtolower(trim(($argv[2]) ?? 'http'));
if (!in_array($command, ['start','restart','stop','reload'])) {
    die('Support command : php '.$executeFile.' start | restart | stop | reload | startd');
}
if (!in_array($runmode, ['http','websocket'])) {
    die('Support option : php '.$executeFile.' start -d');
}

define('ROOT_DIR', realpath(__DIR__.'/../'));
define('APP_DIR', ROOT_DIR.'/application');
define('CONFIG_DIR', ROOT_DIR.'/config');
define('TEMP_DIR', ROOT_DIR.'/runtime');
define('MODE', $runmode);

require ROOT_DIR.'/vendor/autoload.php';

Core::init();

$executeResult = Core::$app[$runmode]->execute($command);
if (!$executeResult) {
    die('服务器执行失败，具体请查看日志！');
}